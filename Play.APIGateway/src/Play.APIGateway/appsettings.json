{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ServiceSettings": {
    "ServiceName": "APIGateway"
  },
  "AuthSettings": {
    "IssuerSigningKey": "fdnifdsfjiudsiufhudsdf564dsf41GYKG HYedsfs",
    "Issuer": "Play.User.Service",
    "ValidIssuer": "Play.User.Service",
    "ValidateIssuer": true,
    "ValidateAudience": false,
    "ValidateLifetime": true,
    "Expiry": "99:00:00"
  },
  "RabbitMqSettings": {
    "Host": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/"
  },
  "ResiliencySettings": {
    "Consumer": {
      "BrokerRetriesEnabled": true,
      "BrokerRetriesLimit": 2,
      "ConsumerRetriesLimit": 3
    },
    "Producer": {
      "PublishMandatoryEnabled": false,
      "PublisherConfirmsEnabled": true
    },
    "ReverseProxy": {
      "Routes": {
        "items_route": {
          "ClusterId": "items_cluster",
          "Match": {
            "Path": "/play-items/{**catch-all}"
          },
          "Transforms": [
            {
              "PathRemovePrefix": "/play-items"
            }
          ]
        },
        "inventory_route": {
          "ClusterId": "inventory_cluster",
          "Match": {
            "Path": "/play-inventory/{**catch-all}"
          },
          "Transforms": [
            {
              "PathRemovePrefix": "/play-inventory"
            }
          ]
        },
        "user_route": {
          "ClusterId": "user_cluster",
          "Match": {
            "Path": "/play-user/{**catch-all}"
          },
          "Transforms": [
            {
              "PathRemovePrefix": "/play-user"
            },
            {
              "PathPrefix": "/user"
            }
          ]
        }
      },
      "Clusters": {
        "items_cluster": {
          "Destinations": {
            "items": {
              "Address": "http://localhost:5002/"
            }
          }
        },
        "inventory_cluster": {
          "Destinations": {
            "inventory": {
              "Address": "http://localhost:5004/"
            }
          }
        },
        "user_cluster": {
          "Destinations": {
            "user": {
              "Address": "http://localhost:5006/"
            }
          }
        }
      }
    }
  }
}
